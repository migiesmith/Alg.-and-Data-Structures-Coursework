package com.grant.smith;

import java.awt.geom.Point2D;


public class Customer extends Point2D.Double{

	// Requirements of the customer (number to be delivered)
	public int c;
	public Customer(int x, int y, int requirement){
		this.x = x;
		this.y = y;
		this.c = requirement;
	}

	public double distanceTo(Point2D other){
		double x0 = x - other.getX();
		double y0 = y - other.getY();
		return Math.abs(y0)/Math.sin(Math.atan(x0/y0));
		//return Math.abs((y - other.getY())) / Math.abs((x - other.getX()));//Math.abs(x - other.getX()) + Math.abs(y - other.getY());
	}
	
}
